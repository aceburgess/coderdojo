div class="col-md-6 col-md-offset-3"
  = form_for @event do |f| 
    = f.label :title 
    = f.text_field :title
    = f.label :place
    = f.text_field :place 
    = f.label :description
    = f.text_area :description 
    = f.label :activities
    = f.text_field :activities
    = f.label :event_date
    = f.datetime_select(:event_date)
    = f.label :number_of_tickets
    = f.number_field(:attendance)
    

    = f.submit "Submit", class: "btn btn-primary" 